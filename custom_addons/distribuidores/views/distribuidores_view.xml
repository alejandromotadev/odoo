<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="distribuidores.list">
      <field name="name">distribuidores list</field>
      <field name="model">distribuidores.distribuidores</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="distribuidores.action_window">
      <field name="name">DISTRIBUIDORES</field>
      <field name="res_model">distribuidores.distribuidores</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
    <record model="ir.actions.server" id="distribuidores.action_server">
      <field name="name">distribuidores server</field>
      <field name="model_id" ref="model_distribuidores_distribuidores"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

  </data>
</odoo>
